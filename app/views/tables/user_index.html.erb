  <% if @tables.empty?  %>
<h5>You have not posted any tables yet, go ahead!</h5>
    <% else %>
<ul>
  <% @tables.each do |table| %>
  <div class="card" style="width: 18rem; margin: 10px;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= link_to table.description, table_path(table) %></h5>
    <p class="card-text"><%= table.location %></p>
  </div>
  <div class="card-body">
    <%= link_to "Update map",
            edit_table_path(table),
            data: { confirm: "Are you sure?" } %>
    <%= link_to "Delete map",
            table_path(table),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </div>
  </div>
  <% end %>
<% end  %>
</ul>
